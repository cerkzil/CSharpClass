@model List<Booking>

<h1>More info</h1>
<br/>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Age</th>
            <th scope="col">Gender</th>
            <th scope="col">Time</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            var bookings = Model;
            Booking barber = bookings[ViewBag.Bid];
        }
        <tr>
            <th scope="row">@(ViewBag.Bid + 1)</th>
            <td>@barber.Barber.Name</td>
            <td>@barber.Barber.Surname</td>
            <td>@barber.Barber.Age</td>
            <td>@barber.Barber.Gender.ToString()</td>
            <td>@barber.AvailableTime.ToString()</td>
            <td>@barber.BookingStatus.ToString()</td>
            <td>
                <a asp-controller="Booking"
                   asp-action="Index" role="button">go back</a>
            </td>
        </tr>
    </tbody>
</table>
<form class="border border-primary p-3" asp-controller="Booking" asp-action="Register" method="post">
        <input name="BookingId" type="hidden" value="@ViewBag.Bid" />
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group form-check">
            <input name="Confirmed "type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
</form>
